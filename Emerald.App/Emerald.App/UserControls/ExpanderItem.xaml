<StackPanel
    x:Class="Emerald.WinUI.UserControls.ExpanderItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Emerald.WinUI.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Rectangle
                        Height="2"
                        Margin="-16,20,-16,0"
        Visibility="{x:Bind BorderVisibility}"
                        HorizontalAlignment="Stretch"
                        Fill="{ThemeResource ExpanderHeaderBorderBrush}" />
    <local:Expander ExpanderStyle="Transparent" Title="{x:Bind Title,Mode=OneWay}" HeaderControls="{x:Bind Content,Mode=OneWay}"/>
    </StackPanel>