<Page
    x:Class="Emerald.WinUI.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Emerald.WinUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--TODO: Add click event (to account settings page) and data template for username-->
        <Button
            x:Name="AccountButton"
            Grid.Row="0"
            Margin="30,20,30,30"
            Padding="10,2"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="{ThemeResource ButtonBackground}"
            Style="{ThemeResource ButtonRevealStyle}">
            <StackPanel Orientation="Horizontal">
                <TextBlock
                    VerticalAlignment="Center"
                    FontSize="16"
                    FontWeight="Bold"
                    Text="Account name (e.g. Noob)" />
                <!--TODO: Add offline visibilty binding for offline accounts-->
                <TextBlock
                    x:Name="IsOffline"
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="12"
                    Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                    Text="Offline"
                    Visibility="Visible" />
            </StackPanel>
        </Button>

        <Button
            Grid.Row="0"
            Height="27.2"
            Margin="30,20,30,30"
            Padding="10,2"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Background="{ThemeResource ButtonBackground}">
            <StackPanel Orientation="Horizontal">
                <FontIcon
                    VerticalAlignment="Center"
                    FontSize="16"
                    FontWeight="Bold"
                    Glyph="&#xF57F;" />
                <TextBlock
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="12"
                    Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                    Text="News" />
            </StackPanel>
        </Button>

        <Grid
            Grid.Row="2"
            Height="60"
            Margin="30,40"
            VerticalAlignment="Bottom">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" MaxWidth="250" />
                <ColumnDefinition Width="0.10*" />
                <ColumnDefinition Width="1*" MaxWidth="250" />
            </Grid.ColumnDefinitions>
            <Button
                x:Name="LaunchButton"
                Grid.Column="2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                FontSize="16"
                Style="{ThemeResource AccentButtonStyle}">
                <StackPanel>
                    <TextBlock
                        x:Name="LaunchButtonBody"
                        HorizontalAlignment="Center"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="Launch" />
                    <TextBlock
                        x:Name="VersionNumberBody"
                        MaxWidth="150"
                        HorizontalAlignment="Center"
                        FontSize="12"
                        Foreground="White"
                        Style="{ThemeResource CaptionTextBlockStyle}"
                        Text="version (e.g. 1.17)"
                        TextTrimming="CharacterEllipsis"
                        TextWrapping="NoWrap" />
                </StackPanel>
            </Button>
            <ComboBox
                x:Name="VersionComboBox"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                ItemsSource="{Binding GameCores, Mode=OneWay}"
                PlaceholderText="Select Version"
                SelectedItem="{Binding CurrentGameCore, Mode=TwoWay}">
            </ComboBox>
        </Grid>
