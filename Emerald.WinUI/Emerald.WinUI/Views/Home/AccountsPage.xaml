<Page
    x:Class="Emerald.WinUI.Views.Home.AccountsPage" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:local="using:Emerald.WinUI.Views.Home" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:models="using:Emerald.WinUI.Models"
    xmlns:helpers="using:Emerald.WinUI.Helpers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <GridView IsItemClickEnabled="False" SelectionMode="None" x:Name="gv">
            <GridView.ItemTemplate>
                <DataTemplate x:DataType="models:Account">
                    <Grid
                        x:DefaultBindMode="OneWay">
                        <Grid.ChildrenTransitions>
                            <TransitionCollection>
                                <AddDeleteThemeTransition />
                            </TransitionCollection>
                        </Grid.ChildrenTransitions>
                        <Grid
                            Canvas.ZIndex="10" />
                        <Button
                            Height="200"
                            Width="160"
                            Padding="0,0,0,0"
                            
                            Margin="5,0,0,5"
                            HorizontalAlignment="Left">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="{ThemeResource ExpanderHeaderBackground}" />
                                    <Setter Property="BorderBrush" Value="{ThemeResource ExpanderHeaderBorderBrush}" />
                                    <Setter Property="BorderThickness" Value="{ThemeResource ExpanderHeaderBorderThickness}" />
                                    <Setter Property="CornerRadius" Value="{ThemeResource ControlCornerRadius}" />
                                </Style>
                            </Button.Style>
                            <Button.ContextFlyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem
                                        
                                        Text="Remove" />
                                    <MenuFlyoutItem
                                        
                                        Text="Settings" />
                                    <ToggleMenuFlyoutItem
                                        IsChecked="{x:Bind IsChecked}"
                                        
                                        Text="Select" />
                                    <MenuFlyoutItem
                                        
                                        Text="Duplicate" />
                                </MenuFlyout>
                            </Button.ContextFlyout>
                            <Grid>
                                <CheckBox
                                    IsChecked="{x:Bind IsChecked}"
                                    
                                    Canvas.ZIndex="3"
                                    Visibility="{x:Bind CheckboxVsibility}"
                                    Margin="5,-6,0,0"
                                    MinWidth="0"
                                    VerticalAlignment="Top"
                                    HorizontalAlignment="Left" />
                                <Grid
                                    Margin="10"
                                    Padding="20,10">
                                    <StackPanel
                                        HorizontalAlignment="Center">
                                        <PersonPicture
                                            DisplayName="{x:Bind UserName}"
                                            ProfilePicture="{x:Bind ProfilePicture}"
                                            HorizontalAlignment="Center"
                                            Width="60"
                                            Height="60" />
                                        <TextBlock
                                            FontSize="20"
                                            MaxWidth="140"
                                            TextTrimming="CharacterEllipsis"
                                            HorizontalAlignment="Center"
                                            Text="{x:Bind UserName}" />
                                        <StackPanel
                                            HorizontalAlignment="Center"
                                            Orientation="Horizontal">
                                            <FontIcon
                                                FontSize="14"
                                                Margin="0,0,2,0"
                                                Glyph="{x:Bind TypeIconGlyph}" />
                                            <TextBlock
                                                FontSize="13"
                                                HorizontalAlignment="Center"
                                                Text="{x:Bind Type}"
                                                FontWeight="SemiBold" />
                                        </StackPanel>
                                        <StackPanel
                                            Margin="0,10,0,0"
                                            HorizontalAlignment="Center">
                                            <DropDownButton
                                                FontSize="13"
                                                FontWeight="SemiBold"
                                                BorderThickness="0"
                                                Content="Options"
                                                Margin="5,0,0,0">
                                                <DropDownButton.Flyout>
                                                    <MenuFlyout>
                                                        <MenuFlyoutItem
                                                            
                                                            Text="Remove" />
                                                        <MenuFlyoutItem
                                                            
                                                            Text="Settings"/>
                                                        <ToggleMenuFlyoutItem
                                                            IsChecked="{x:Bind IsChecked}"
                                                            
                                                            Text="Select" />
                                                        <MenuFlyoutItem
                                                            
                                                            Text="Duplicate" />
                                                    </MenuFlyout>
                                                </DropDownButton.Flyout>
                                            </DropDownButton>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Grid>
                        </Button>
                    </Grid>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</Page>